{% extends 'base.html.twig' %}

{% block body %}
{% for articl in article %}
    <article>
        <h2>{{ articl.title | raw }}</h2>
        <div class="metada">ecrit le {{ articl.createdAt | date('d/m/Y') }} à 
        {{ articl.createdAt | date('H:i') }} dans la catégorie politique</div>
        <div class="content">
            <img src="{{articl.image}}" alt="">
            <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Quisquam ad accusantium voluptate vitae fuga aliquid?</p>
            <p>Voluptate non commodi libero a ducimus. Consequatur sequi illum modi deleniti sunt dolores, natus eos?</p>
            <hr>
                {{articl.content |raw}}
        </div>
    </article>
{% endfor %}
{% endblock %}